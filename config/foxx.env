# Foxx Service Configuration
FOXX_API_BASE_URL=http://localhost:8529
FOXX_DATABASE=attack_shuffle
FOXX_ROOT_PASSWORD=examplepassword

# Foxx Deployment Settings
FOXX_SERVICES_DIRECTORY=./services
FOXX_DEPLOY_ON_START=true
FOXX_REDEPLOY_ON_CHANGE=true

# Foxx Logging
FOXX_LOG_LEVEL=info

# Authentication for Foxx Services
FOXX_AUTH_ENABLED=true
FOXX_AUTH_TOKEN_SECRET=supersecrettoken
FOXX_AUTH_TOKEN_EXPIRATION=3600 # Token expiration in seconds (1 hour)

# Service-Specific Configuration
