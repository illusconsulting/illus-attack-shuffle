# ArangoDB Configuration
ARANGO_HOST=localhost
ARANGO_PORT=8529
ARANGO_ROOT_PASSWORD=examplepassword
ARANGO_DATABASE=attack_shuffle

# Backup and Restore Settings
ARANGO_BACKUP_DIRECTORY=./arangodb/backups
ARANGO_BACKUP_THREADS=4
ARANGO_INCLUDE_SYSTEM_COLLECTIONS=false

# Foxx Services
FOXX_INSTALL=true

# Logging Configuration
ARANGO_LOG_LEVEL=info

# Email Notifications for Backups
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_ADMIN=admin@example.com
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@example.com
EMAIL_SMTP_PASSWORD=your-email-password
EMAIL_SMTP_SECURE=false
