{
    "backupDirectory": "./arangodb/backups",
    "schedule": "daily",
    "retentionPolicy": {
      "keepLast": 7,
      "deleteOld": true
    },
    "arangodump": {
      "host": "localhost",
      "port": 8529,
      "database": "attack_shuffle",
      "username": "root",
      "password": "examplepassword",
      "includeSystemCollections": false,
      "threads": 4,
      "compressOutput": true
    },
    "arangoimport": {
      "host": "localhost",
      "port": 8529,
      "database": "attack_shuffle",
      "username": "root",
      "password": "examplepassword",
      "threads": 4
    },
    "notifications": {
      "enable": true,
      "email": "admin@example.com",
      "smtp": {
        "host": "smtp.example.com",
        "port": 587,
        "username": "your-email@example.com",
        "password": "your-email-password",
        "secure": false
      }
    },
    "logging": {
      "enable": true,
      "logDirectory": "./logs",
      "logLevel": "info"
    }
  }
  