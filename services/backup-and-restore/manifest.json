{
    "name": "backup-and-restore",
    "version": "1.0.0",
    "description": "A Foxx service for managing database backups and restorations in the Attack Shuffle project.",
    "author": "Illus Consulting",
    "license": "GPL-3.0",
    "main": "index.js",
    "engines": {
      "arangodb": "^3.9.0"
    },
    "scripts": {
      "setup": "echo 'No setup required.'",
      "teardown": "echo 'No teardown required.'"
    },
    "dependencies": {},
    "configuration": {
      "backupDirectory": {
        "type": "string",
        "default": "./arangodb/backups",
        "description": "Directory to store backups."
      },
      "retentionPolicy": {
        "type": "number",
        "default": 7,
        "description": "Number of backups to retain."
      }
    },
    "tests": false
  }
  